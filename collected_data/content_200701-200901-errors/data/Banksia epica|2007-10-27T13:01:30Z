|1={{clade
   |1=''[[Banksia pilostylis|B.&nbsp;pilostylis]]''
   |2={{clade
      |1=''[[Banksia media|B.&nbsp;media]]''
      |2='''''B.&nbsp;epica'''''
      |3=''[[Banksia praemorsa|B.&nbsp;praemorsa]]''
      }}
   }}
|2={{clade
   |1=''[[Banksia benthamiana|B.&nbsp;benthamiana]]''
   |2=''[[Banksia audax|B.&nbsp;audax]]''
   |3={{clade
      |1=''[[Banksia laevigata subsp. laevigata|''B.&nbsp;laevigata'' subsp. ''laevigata'']]
