  |label1=[[Gymnosperm]]s
  |1={{clade
      |1={{clade     
          |1={{clade     
              |1={{clade     
                  |1=[[Gnetales]]<br />(gymnosperm)
                  |2=''[[Welwitschia]]''<br />(gymnosperm)
                 }}
              |2=''[[Ephedra (genus)|Ephedra]]''<br />(gymnosperm)
